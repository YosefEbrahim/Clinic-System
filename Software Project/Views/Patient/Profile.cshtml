@model doctor_patient_viewmodel
@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Dept</th>
        <th>Gender</th>
        <th>Phone</th>
        <th></th>
    </tr>
        @foreach (var record in Model.doctor)
        {
             <tr>
            <td>@record.User.Name</td>
            <td>@record.User.Email</td>
            <td>@record.Dept?.Name</td>
            <td>@record.User.Gender</td>
            <td>@record.User.PhoneNumber</td>
            <td>
                <a asp-action="Details" asp-route-id="@record.User.Id" class="btn btn-secondary">Details</a>
                <a asp-action="Delete" asp-controller="Admin" asp-route-id="@record.User.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Edit" asp-route-id="@record.User.Id" class="btn btn-success">Edit</a>
            </td>
        </tr>
        }

    
</table>