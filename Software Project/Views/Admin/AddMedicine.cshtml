@model CommonProp
@{
    ViewData["Title"] = "Add Midecine";
}

<h1>Profile</h1>
<form action="AddMedicine" method="post">
<div class="alert alert-warning">
    <h1>Enter Midecine for patient : @Model.Name</h1>
       <input type="text" asp-for="Id" style="visibility:hidden">
        <div class="input-group input-group">
            <label class="form-label">Midecine Name :</label>
            <input type="text" placeholder="Enter Midecine" asp-for="SingleMedicine" class="form-control">
            <span asp-validation-for="SingleMedicine" class="text-danger"></span>
        </div>
</div>
<a asp-action="AllPetient" asp-controller="Admin"  class="btn btn-secondary">Back</a>
 <button class="btn btn-success" type="submit">Add</button>
 </form>
 <br />
 <br />
 @if(@TempData["msg"]!=null)
{
    <h1 class="alert alert-success">@TempData["msg"]</h1>
}
