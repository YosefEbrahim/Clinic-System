@model List<Doctor>
@{
    ViewData["Title"] = "All Doctor";
}

<h1>All Doctor</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Dept</th>
        <th>Gender</th>
        <th>Phone</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
           <tr>
            <td>@item.User.Name</td>
            <td>@item.User.Email</td>
            <td>@item.Dept?.Name</td>
            <td>@item.User.Gender</td>
            <td>@item.User.PhoneNumber</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.User.Id" class="btn btn-secondary">Details</a>
                <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.User.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Edit" asp-route-id="@item.User.Id" class="btn btn-success">Edit</a>
            </td>
        </tr>
    }
</table>
